<table class="table">
  <tr>
    <th class="active" colspan="2">Commenter</th>
  </tr>
  <tr>
    <td><%= comment.created_by.email %></td>
    <td class="pull-right">
      <%= link_to edit_story_comment_path(comment.story, comment) do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>
      <% link_to 'Edit', [comment.story, comment], method: :edit_story_comment_path %>
    </td>
    <td class="pull-right"><%= link_to 'Delete', [comment.story, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <tr>
    <th class="active" colspan="3">Comments</th>
  </tr>
  <tr>
    <td colspan="3"><%= comment.body %></td>
  </tr>
</table>
