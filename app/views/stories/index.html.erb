<div class="header">
  <h2 Listing>Iron News Feed</h2>
</div>
<div class="table-responsive">
  <table class="table table-condensed table-striped table-hover">
    <tbody class="table-body">
      <%- @stories.each.with_index do |story, index| %>
      <tr class="primary">
        <td><%= index + 1 %></td>
        <td colspan="2"><%=link_to story.title, story.url %></td>
        <td><span class="badge"><%= story.comments.count %> Comments</span></td>
      </tr>
      <tr>
        <td></td>
        <td>Posted at <%= time_ago_in_words(story.created_at) %> ago</td>
        <td><%= story.created_by.email %></td>
        <td>
          <%= link_to story do %>
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            Details
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
