<div class="header">
  <h2 Listing>Iron News Feed</h2>
</div>

<div class="container-fluid">
  <%- @stories.each.with_index do |story, index| %>
  <div class="row">
    <div class="col-md-1"><%= index + 1 %></div>
    <% if story.image.present? %>
      <div class="col-md-1">
        <img class="media-object" src="<%= story.image_url(:thumbnail) %>" height="64">
      </div>
    <%else %>
      <div class="col-md-1">
        <%= image_tag("Ruby.png", :width => 64, :height => 64) %>
      </div>
    <% end %>
    <div class="col-md-8"><h5><strong><%=link_to story.title, story.url %></strong></h5></div>
    <div class="col-md-2"><span class="badge"><%= story.comments.count %> Comments</span></div>
    <div class="col-md-5 col-md-offset-0"><p>Posted at <%= time_ago_in_words(story.created_at) %> ago</p></div>
    <div class="col-md-3"><%= story.created_by.email %></div>
    <div class="col-md-2">
      <%= link_to story do %>
        <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
        Details
      <% end %>
    </div>
  </div>
  <% end %>
</div>
